<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/approve_card"
    app:cardElevation="15dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rellayout"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="30dp"
        android:id="@+id/approve_request_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="30dp"
        android:layout_toEndOf="@+id/approve_request_from"
        android:id="@+id/approve_request_from_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="abc" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/approve_request_from_value"
        android:id="@+id/approve_request_message"
        android:layout_height="wrap_content"
        android:text=""
        android:inputType="textMultiLine"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/status"
            android:textSize="30dp"
            android:text="Status:"
            android:layout_below="@+id/approve_request_message"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/status_value"
            android:textSize="30dp"
            android:text=""
            android:layout_below="@+id/approve_request_message"
            android:layout_toEndOf="@+id/status"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/approve"
        android:src="@drawable/approve_request_option"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="250dp"
        android:layout_below="@+id/status_value"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reject"
        android:layout_toEndOf="@+id/approve"
        android:src="@drawable/reject_request"
        android:layout_below="@+id/status_value"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>